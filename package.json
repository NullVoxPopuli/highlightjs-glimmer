{
  "name": "highlightjs-glimmer",
  "version": "1.4.0",
  "description": "Glimmer syntax highlighting with Highlight.JS",
  "main": "dist/glimmer.cjs.cjs",
  "browser": "dist/glimmer.esm.min.js",
  "type": "module",
  "repository": "git@github.com:NullVoxPopuli/highlightjs-glimmer.git",
  "author": "NullVoxPopuli",
  "license": "MIT",
  "scripts": {
    "build": "node ./scripts/build.cjs",
    "debug": "npx html-pages .",
    "lint:js": "eslint .",
    "lint": "eslint .",
    "test:modules": "yarn build && export NODE_OPTIONS='--experimental-vm-modules' && jest . --config tests/jest.config.cjs",
    "test:modules:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch --config tests/jest.config.cjs --testNamePattern",
    "test:cjs": "jest . --config tests/jest.config-cjs.cjs",
    "test:cjs:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch --config tests/jest.config-cjs.cjs --testNamePattern"
  },
  "engines": {
    "node": "> 10"
  },
  "jest": {},
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@nullvoxpopuli/eslint-configs": "^1.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.23",
    "babel-jest": "^27.0.5",
    "common-tags": "^1.8.0",
    "esbuild": "^0.12.12",
    "eslint": "^7.23.0",
    "eslint-plugin-html": "^6.1.2",
    "highlight.js": ">= 11.0.1",
    "jest": "^27.0.5",
    "lowlight": "github:wooorm/lowlight",
    "rehype": "^11.0.0",
    "rehype-highlight": "^4.1.0",
    "rehype-stringify": "^8.0.0",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^13.0.1",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.1.0",
    "semantic-release": "^17.4.4",
    "unified": "^9.2.1",
    "vfile": "^5.0.1"
  },
  "peerDependencies": {
    "highlight.js": ">= 11.0.1"
  },
  "release": {
    "branches": [
      "main",
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "volta": {
    "node": "14.17.1",
    "yarn": "1.22.10",
    "npm": "7.8.0"
  }
}
