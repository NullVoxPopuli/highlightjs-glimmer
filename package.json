{
  "name": "highlightjs-glimmer",
  "version": "1.3.3",
  "description": "Glimmer syntax highlighting with Highlight.JS",
  "main": "src/index.js",
  "type": "module",
  "repository": "git@github.com:NullVoxPopuli/highlightjs-glimmer.git",
  "author": "NullVoxPopuli",
  "license": "MIT",
  "scripts": {
    "build": "node ./scripts/build.cjs",
    "debug": "npx html-pages .",
    "lint:js": "eslint .",
    "lint": "eslint .",
    "test": "yarn build && export NODE_OPTIONS='--experimental-vm-modules' && jest ."
  },
  "engines": {
    "node": "> 10"
  },
  "jest": {
    "transform": {},
    "testRegex": [
      "\\.test\\."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@nullvoxpopuli/eslint-configs": "^1.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "common-tags": "^1.8.0",
    "esbuild": "^0.11.13",
    "eslint": "^7.23.0",
    "eslint-plugin-html": "^6.1.2",
    "highlight.js": ">= 11.0.0-alpha0",
    "jest": "^26.6.3",
    "semantic-release": "^17.4.2"
  },
  "peerDependencies": {
    "highlight.js": ">= 11.0.0-alpha0"
  },
  "release": {
    "branches": [
      "main",
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "volta": {
    "node": "14.16.1",
    "yarn": "1.22.10",
    "npm": "7.8.0"
  }
}
