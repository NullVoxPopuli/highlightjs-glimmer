{
  "pipeline": {
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    //
    //         C.I. / C.D.
    //
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["^build"]
    },

    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    //
    //         Quality Checks
    //
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    "lint": {
      "outputs": [],
      "dependsOn": ["lint:js", "lint:hbs", "lint:prettier", "lint:types"]
    },
    "lint:js": {
      "outputs": []
    },
    "lint:hbs": {
      "outputs": []
    },
    "lint:prettier": {
      "outputs": []
    },
    "lint:types": {
      "outputs": [],
      "dependsOn": ["^build"]
    }
  }
}
